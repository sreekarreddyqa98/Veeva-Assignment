<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Core Product Tests" parallel="tests" thread-count="2">

    <test name="Chrome Tests">
        <parameter name="browser" value="chrome"/>
        <parameter name="cucumber.filter.tags" value="${cucumber.filter.tags}" />
        <classes>
            <class name="org.veeva.runner.RunCucumberTestDP1"/>
        </classes>
    </test>

    <test name="Edge Tests">
        <parameter name="cucumber.filter.tags" value="${cucumber.filter.tags}" />
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="org.veeva.runner.RunCucumberTestDP1"/>
        </classes>
    </test>

</suite>